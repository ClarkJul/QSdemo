<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quick_launch_widget_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_content_background"
    android:layout_gravity="center"
    android:orientation="vertical">
    <include layout="@layout/card_view_header"/>
    <ImageView
        android:id="@+id/card_view_header_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cardview_hader_line_color"/>
    <!--<include layout="@layout/card_view_header"/>-->
    <!--<ImageView-->
        <!--android:id="@+id/card_view_header_bottom_line"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/cardview_hader_line_color"/>-->
    <LinearLayout
        android:id="@+id/quick_launch_empty_text_list"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:paddingTop="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#767676"
            android:text="@string/mop_str_text_no_qsa"
            />
    </LinearLayout>
    <GridView
        android:id="@+id/recy_card_view_quick_launch_list"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_gravity="center"
        android:gravity="center"
        android:listSelector="@android:color/transparent"
        android:paddingTop="4dp"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:numColumns="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
