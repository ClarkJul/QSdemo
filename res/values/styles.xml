<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">#fafafa</item>
        <item name="android:colorPrimary">#fafafa</item>
        <item name="android:titleTextColor">@color/action_title_color</item>
    </style>

    <style name="AppTheme.transparentTheme" parent="AppTheme">


        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <!-- Used to color the switch bar controls -->
    <style name="ThemeOverlay.SwitchBar" parent="@android:style/ThemeOverlay.Material.Light">
        <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
        <item name="android:colorAccent">@color/switchbutton_forground_color</item>
        <item name="android:colorControlActivated">@color/switchbutton_forground_color</item>
        <item name="android:colorForeground">@color/switchbutton_background_color</item>
        <item name="android:colorForegroundInverse">@color/switchbutton_background_color</item>

    </style>

    <style name="quick_launch_header_font">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4586e2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="card_management_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="radioText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FitnessGenderRadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/fitness_background_color</item>
        <item name="android:textColorSecondary">@color/fitness_radio_button_unchecked_color</item>
    </style>

    <style name="Theme.DeviceDefault.Settings.SmartCard" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:navigationBarColor">#fffafafa</item>
    </style>
</resources>
